<odoo>
  <record id="view_move_line_tree_inherit_running_balance" model="ir.ui.view">
    <field name="name">account.move.line.tree.running.balance</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='balance']" position="after">
        <field name="running_balance_line" readonly="1"/>
      </xpath>
    </field>
  </record>
</odoo>
